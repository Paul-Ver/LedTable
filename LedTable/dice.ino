static void diceLoop() {
  static uint16_t dice = 7;
  //Serial.println(dice,DEC);
  if (holdTime >= 100) {
    dice = 7;
  }
  if (dice == 1000) {
    strip.clear();
    dice = random(1, 6);
    displayArray(DICE[dice],strip.Color(0,0,255));
  }
  if (dice > 6) {
    dice ++;
    if (dice % 25 == 0) {
      strip.clear();
      displayArray(DICE[random(1, 6)],strip.Color(255,0,0));
    }
  } 
}
